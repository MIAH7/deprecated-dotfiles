exec systemctl --user import-environment

###########
#Variables#
###########

# Logo key
set $mod Mod4

# Terminal emulator
set $term alacritty

# Application launcher
set $menu wofi --show=drun, run
#bemenu-run -l 15 -H 20 --line-height=20 --fn Ubuntu --tb=#2e3440 --tf=#eceff4 --fb=#2e3440 --ff=#eceff4 --nb=#2e3440 --nf=#eceff4 --hb=#2e3440 --hf=#bf616a --sb=#2e3440 --sf=#eceff4

# Screen locker
set $lock swaylock

# Clipboard history
bindsym --to-code $mod+h exec clipman pick -t wofi



#####################
#Input configuration#
#####################

# Keyboard layout
input * {
    xkb_layout us,ru(ruu)
    xkb_options grp:caps_toggle
    xkb_capslock disable
}



#############
#Key binding#
#############

#
# Basics
#
    # Screen lock
	bindsym --to-code $mod+l exec $lock

    # Start a terminal
	bindsym --to-code $mod+Return exec $term

    # Kill focused window
	bindsym --to-code $mod+Shift+q kill

    # Start launcher
	bindsym --to-code $mod+d exec $menu

    # Reload the configuration file
	bindsym --to-code $mod+Shift+c reload

    # Exit sway
	bindsym --to-code $mod+Shift+e exec swaynag -t warning -m  'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'
    
    # Switch window to tabbed layout
    bindsym $mod+w layout tabbed


#
# Moving around:
#

    # Move focus around
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right

    # Move the focused window with the same
    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right


#
# Workspaces:
#

    # Switch to workspace
    bindsym --to-code $mod+1 workspace number 1
    bindsym --to-code $mod+2 workspace number 2
    bindsym --to-code $mod+3 workspace number 3
    bindsym --to-code $mod+4 workspace number 4
    bindsym --to-code $mod+5 workspace number 5
    bindsym --to-code $mod+6 workspace number 6
    bindsym --to-code $mod+7 workspace number 7
    bindsym --to-code $mod+8 workspace number 8
    bindsym --to-code $mod+9 workspace number 9
    bindsym --to-code $mod+0 workspace number 10

    # Move focused container to workspace
    bindsym --to-code $mod+Shift+1 move container to workspace number 1
    bindsym --to-code $mod+Shift+2 move container to workspace number 2
    bindsym --to-code $mod+Shift+3 move container to workspace number 3
    bindsym --to-code $mod+Shift+4 move container to workspace number 4
    bindsym --to-code $mod+Shift+5 move container to workspace number 5
    bindsym --to-code $mod+Shift+6 move container to workspace number 6
    bindsym --to-code $mod+Shift+7 move container to workspace number 7
    bindsym --to-code $mod+Shift+8 move container to workspace number 8
    bindsym --to-code $mod+Shift+9 move container to workspace number 9
    bindsym --to-code $mod+Shift+0 move container to workspace number 10


#
# Layout stuff:
#
    # Split the current object of focus
    # $mod+b or $mod+v, for horizontal and vertical splits
    bindsym --to-code $mod+b splith
    bindsym --to-code $mod+v splitv

    # Make the current focus fullscreen
    bindsym --to-code $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym --to-code $mod+Shift+Space floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym --to-code $mod+space focus mode_toggle

    # Move focus to the parent container
    bindsym --to-code $mod+a focus parent
    
    # Use Mouse+$mod to drag floating windows to their wanted position
    floating_modifier $mod

#
# Scratchpad:
#
    # Move the currently focused window to the scratchpad
    bindsym --to-code $mod+Shift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    bindsym --to-code $mod+minus scratchpad show


#
# Resizing containers:
#
mode "resize" {
    # Resize containers
	bindsym --to-code Left resize shrink width 10px
	bindsym --to-code Down resize grow height 10px
	bindsym --to-code Up resize shrink height 10px
	bindsym --to-code Right resize grow width 10px

    # Return to default mode
	bindsym --to-code Return mode "default"
    bindsym --to-code Escape mode "default"
}
bindsym --to-code $mod+r mode "resize"


#
# Screenshots
#
    # Take a screenshot
    bindsym --to-code Print exec grimshot --notify copy screen
    bindsym --to-code Ctrl+Print exec grimshot --notify save screen ~/Pictures/Screenshots/screenshot-$(date  +"%Y%m%d-%H%M%S").png

    # Take a screenshot of the selected area
    bindsym --to-code Shift+Print exec grimshot --notify copy area
    bindsym --to-code Shift+Ctrl+Print exec grimshot --notify save area ~/Pictures/Screenshots/screenshot-$(date  +"%Y%m%d-%H%M%S").png

    # Take a screenshot of the active window
    bindsym --to-code Alt+Print exec grimshot --notify copy active
    bindsym --to-code Ctrl+Alt+Print exec grimshot --notify save active ~/Pictures/Screenshots/screenshot-$(date  +"%Y%m%d-%H%M%S").png


#
# Multimedia keys
#
    # Volume controls
    bindsym --to-code XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +2%
    bindsym --to-code XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -2%
    bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle

    # Media controls
    bindsym --to-code XF86AudioPlay exec playerctl play-pause
    bindsym --to-code XF86AudioPause exec playerctl play-pause
    bindsym --to-code XF86AudioNext exec playerctl next
    bindsym --to-code XF86AudioPrev exec playerctl previous



######################
#Output congiguration#
######################

#
# Dispays
#
output DVI-I-1 mode 1440x900@74Hz
output DVI-I-1 pos 0 0
output DVI-I-1 adaptive_sync on
output VGA-1 mode 1280x1024@75Hz
output VGA-1 pos 1440 0
output VGA-1 adaptive_sync on
workspace 1 output DVI-I-1
workspace 10 output VGA-1



############
#Appearance#
############

# Sway color scheme
client.focused #4c566a #4c566a #eceff4 #4c566a #4c566a
client.focused_inactive #2e3440 #2e3440 #eceff4 #2e3440 #2e3440
client.unfocused #2e3440 #2e3440 #eceff4 #2e3440 #2e3440

# Gaps
smart_gaps on
gaps inner 5
gaps outer 0

# Containers border
smart_borders on
default_border pixel 2px
default_floating_border pixel 2px

# Wallpapers
output "DVI-I-1" bg ~/Pictures/Wallpapers/wallhaven-493j3k.jpg fill
output "VGA-1" bg #000000 solid_color 

# Fonts
font pango:Ubuntu 14px

# Status bar
bar {
    swaybar_command waybar
}

# GTK theme

seat seat0 xcursor_theme "Numix-Cursor-Light"

set $gtkschema org.gnome.desktop.interface

exec_always {
    gsettings set $gtkschema gtk-theme 'Nordic-darker'
    gsettings set $gtkschema icon-theme 'Papirus-Dark'
    gsettings set $gtkschema cursor-theme 'Numix-Cursor-Light'
    gsettings set $gtkschema font-name 'Ubuntu'
}


#######
#Other#
#######

# Apps floating settings
for_window [window_role="pop-up"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_role="dialog"] floating enable

# Autostart
exec wl-paste -t text --watch clipman store
exec wl-paste -p -t text --watch clipman store -P --histpath="~/.local/share/clipman-primary.json"
exec autotiling
exec mako
exec kdeconnect-indicator
